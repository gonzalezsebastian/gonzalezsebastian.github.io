---
import Section from "@/components/Section.astro";

import { languages } from "@cv"
---

<Section title="Idiomas">
    <ul>
        {
            languages.map(({ language, fluency}) =>{
                return (
                <div>
                    <li><h3>{language}</h3></li>
                    <p>{fluency}</p>
                </div>
                )
            })
        }
    </ul>
</Section>

<style>
    div{
        
    }
    ul {
        display: flex;
        justify-content: space-around;
        list-style: none;
    }
    h2 {
        margin-bottom: 0.5rem;
    }
    p {
        margin: 0;
    }
</style>